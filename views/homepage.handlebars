<div id='homepage-posts'>
  {{#each posts as |post|}}
    <div id='single-post-wrapper'>
      <a id='single-post' href='/post/{{post.id}}'>
        <div id='post-header' class='{{post.category_name}}'>
          <p id='post-category'>{{post.category_name}}</p>
          <p id='post-date'>{{post.user.username}}
            -
            {{format_date post.created_at}}</p>
        </div>
        <img id='post-image' src='{{post.image_url}}' alt='{{post.title}}' />
        <div id='post-body-wrapper'>
          <h4 id='post-title'>{{post.title}}</h4>
          <p id='post-body'>
            {{post.body}}
          </p>
        </div>
      </a>
      <div id='post-icon-wrapper'>
        <div id='chat-icon-wrapper'>
          <img id='chat-icon' src='./images/comment.png' alt='' />
          <p>{{checkCounter post.comments}}</p>
        </div>
        <div id='like-icon-wrapper'>
          <img
            data-like-active='{{checkTruthy post.likes}}'
            data-post-id='{{post.id}}'
            class='like-icon {{checkTruthy post.likes}}'
            src='./images/like.png'
            alt=''
          />
          <p>{{post.like_count}}</p>
        </div>
      </div>
    </div>
  {{/each}}
</div>
<script src='./javascript/handle-likes.js'></script>