<div id='search-wrapper'>
  <div id='search-controls'>
    <input
      id='search'
      placeholder='Search user'
      aria-label='Search through site content'
    />
    <button id='submit-user'>Submit</button>
    <button id='clear-search'>Clear</button>

    <hr />
    <p style='margin-bottom: 0;'>Search by existing categories</p>
    {{#each categoryArr as |category|}}
      <button
        class='category-btns {{category.category_name}}'
        data-category-id='{{category.id}}'
      >{{category.category_name}}</button>
    {{/each}}
  </div>
  <div id='search-user-wrapper'></div>
  <div id='search-post-wrapper'></div>
</div>

<script src='/javascript/handle-category-search.js'></script>
<script src='/javascript/handle-user-search.js'></script>